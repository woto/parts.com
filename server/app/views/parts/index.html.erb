<h1><%= t('Parts') %></h1>

<%= paginate @parts %>

<table>
  <tr>
    <th><%= t('Catalog number') %></th>
    <th><%= t('Old catalog number') %></th>
    <th><%= t('Part name') %></th>
    <th><%= t('Manufacturer') %></th>
    <th><%= t('Price') %></th>
    <th><%= t('Price checked') %></th>
    <th><%= t('Price updated') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.catalog_number %></td>
    <td><%= part.old_catalog_number %></td>
    <td><%= part.title %></td>
    <td><%= part.manufacturer.try(:title) %></td>
    <td><%= part.price %></td>
    <td><%= part.price_checked %></td>
    <td><%= part.price_updated %></td>

    <td><%= link_to controls('Show'), part %></td>
    <td><%= link_to controls('Edit'), edit_part_path(part) %></td>
    <td><%= link_to controls('Destroy'), part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= paginate @parts %>
<br />


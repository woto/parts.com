<h1>Listing parts</h1>

<table>
  <tr>
    <th>Catalog number</th>
    <th>Manufacturer</th>
    <th>Price</th>
    <th>Price checked</th>
    <th>Price updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.catalog_number %></td>
    <td><%= part.manufacturer.try(:title) %></td>
    <td><%= part.price %></td>
    <td><%= part.price_checked %></td>
    <td><%= part.price_updated %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


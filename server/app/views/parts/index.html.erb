<h1><%= t('Parts') %></h1>

<table>
  <tr>
    <th><%= t('Catalog number') %></th>
    <th><%= t('Manufacturer') %></th>
    <th><%= t('Price') %></th>
    <th><%= t('Price checked') %></th>
    <th><%= t('Price updated') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.catalog_number %></td>
    <td><%= part.manufacturer.try(:title) %></td>
    <td><%= part.price %></td>
    <td><%= part.price_checked.to_formatted_s(:short) %></td>
    <td><%= part.price_updated.to_formatted_s(:short) %></td>
    <td><%= link_to t('Show'), part %></td>
    <td><%= link_to t('Edit'), edit_part_path(part) %></td>
    <td><%= link_to t('Destroy'), part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


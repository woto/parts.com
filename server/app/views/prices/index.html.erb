<h1><%= t('Uploaded csv files') %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= t('Csv file') %></th>
    <th><%= t('File size') %></th>
    <th><%= t('.Created at') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prices.each do |price| %>
  <tr class='<%= cycle('even', 'odd') %>' >
    <td><%= price.price_identifier %></td>
    <td><%= number_to_human_size(price.file_size) %></td>
    <td><%= l(price.created_at, :format => :short) %></td>
    <td><%= link_to controls('Download'), price.price.url %></td>
    <td><%= link_to controls('Destroy'), price, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

